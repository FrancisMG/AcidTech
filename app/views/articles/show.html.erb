
<%= render partial: "static/header"%>


<p id="notice"><%= notice %></p>


<section> 

  <div  class="container" align="center">
    <h1><%= @article.title %></h1>
  </div>

<div class="container-fluid">
<div class="row">
  <div class="col-sm-6">
    <div class="container" style="padding-bottom: 50px; padding-top: 50px;" align="right"> 
      <% @article.tags.each do |tag| %>
      <button type="button" class="btn btn-default btn-sm"  style="margin-bottom: 15px;"> <%= link_to tag.name, tag_path(tag) %></button>
      <% end %>
      
    </div>
  </div>
</div>
</div>



<section> 
<div class="container-fluid" align="center"> 
  <div class="feature-image">
    <%= image_tag(@article.featureimage, class: "img-responsive") %>
  </div>
</div>
</section>

<section>
  
  <div class="container-fluid"  >


<div class="row">

  <div class="col-sm-12">
     <p>
      
      <%= raw(@article.content) %>
    </p>
  </div>

   

 </div>
  

  
 </div>

</section>




</div>



</section>



<%= render partial: "static/footer"%>



